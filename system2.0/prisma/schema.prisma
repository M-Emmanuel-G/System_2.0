generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String     @id @default(cuid()) 
  email String  @unique
  name  String
  register Int
}

model Dvr{
  id String @id @default(cuid())
  name_Client String @default("name_Client")
  model String @default("modelo")
  cams_installed String @default("cameras instaladas")
  user String @default("usuario")
  password String @default("senha")
  ip String @default("ip")
  cloud String @default("cloud")
  service_port String @default("porta servico")
  http_port String @default("porta http")
  ddns String @default("ddns")
  hd String @default("Tamanho HD")
  recording_days String @default("Dias de gravacao")

  preventive Preventive[]
}

model Clients{
  id String @id @default(cuid())
  client String
  preventive Preventive[]
}

model Preventive {
  id String @id @default(cuid())
  date String

  clientID String
  clients Clients @relation(fields: [clientID], references: [id])

  dvrID String
  dvr Dvr @relation(fields: [dvrID], references: [id])

}
